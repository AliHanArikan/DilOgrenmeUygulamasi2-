@using DtoLayer.Dtos.AdminDtos;
@model AdminLoginDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MainPage/Index.cshtml";
}






<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Giriş Yap</h2>
            <form method="post">
                <div class="form-group">
                    <label for="email">İsim:</label>
                    <input type="text" class="form-control" asp-for="userName" placeholder="İsminizi girin">
                </div>
                <div class="form-group">
                    <label>Soyad</label>
                    <input type="text" class="form-control" asp-for="password" placeholder="Şifrenizi girin">
                </div>
              
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </form>
        </div>
    </div>
</div>



