@using EntityLayer.Concrete;
@model List<EnglishStory>
@{
    Layout = null;
}

<!DOCTYPE html>


<html>
<head>
    <title>Admin Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>


    <nav class="navbar navbar-expand-sm navbar-dark bg-warning pb-3 mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" href="javascript:void(0)">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="javascript:void(0)">English</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="javascript:void(0)">Spanish</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="javascript:void(0)">French</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="text" placeholder="Search">
                    <button class="btn btn-primary" type="button">Ara</button>
                </form>
            </div>
        </div>
    </nav>


    <div class="container p-3">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col ">
                    <div class="card">
                        <img src="~/@item.EnglishStoryImageUrl" class="card-img-top" alt="..." width="300px" height="350px">
                        <div class="card-body">
                            <h5 class="card-title">@item.EnglishStoryName</h5>

                          
                         <p class="card-text">@item.EnglishStoryDescription This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                          
                         <div class="button-group row justify-content-between p-3">
                                <a class="btn btn-warning col-6 mb-2" href="/AdminArea/EnglishStoriesAdmin/UpdateStoryDetails/@item.EnglishStoryID">Story Detail Update</a>
                                <a class="btn btn-danger col-6 mb-2" href="/AdminArea/EnglishStoriesAdmin/UpdateStory/@item.EnglishStoryID">Story Update</a>
                                <a class="btn btn-warning-0 col-6 mb-2" href="/AdminArea/EnglishStoiesAdmin/AddQuestion/@item.EnglishStoryID">Soru Ekle</a>
                                <a class="btn btn-warning-0 col-6 mb-2" href="/AdminArea/EnglishStoiesAdmin/AddQuestion/@item.EnglishStoryID">Soru Ekle</a>
                           @*   <button class="btn btn-success">Soru Ekle</button> *@
                         </div>
                         
                    
                    </div>
                    </div>
                </div>
            }

        </div>
    </div>
</body>
</html>